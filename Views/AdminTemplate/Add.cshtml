@page
@model ProductSearch.Models.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tailwind Admin Template</title>
    <meta name="author" content="David Grzyb">
    <meta name="description" content="">

    <!-- Tailwind -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Karla:400,700&display=swap');
        .font-family-karla { font-family: karla; }


.bg-sidebar {
    background: #cfab7d;
}

.cta-btn {
    color: #cfab7d;
}

.upgrade-btn {
    background: #cfab7d;
}

    .upgrade-btn:hover {
        background: #cfab7d;
    }


.active-nav-link {
    background: #cfab7d;
}


.nav-item:hover {
    background: #402b23;
}


.account-link:hover {
    background: #402b23;
}

    </style>
</head>
<body class="bg-gray-100 font-family-karla flex">

    <aside class="relative bg-sidebar h-screen w-64 hidden sm:block shadow-xl">
        <div class="p-6">
            <a asp-controller="AdminTemplate" asp-action="Index" class="text-white text-3xl font-semibold uppercase hover:text-gray-300">Admin</a>

        </div>

        <nav class="text-white text-base font-semibold pt-3">

            <a asp-controller="AdminTemplate" asp-action="Index" class="flex items-center active-nav-link text-white py-4 pl-6 nav-item">
                <i class="fas fa-sticky-note mr-3"></i>
                Dashboard
            </a>

            <a asp-controller="AdminTemplate" asp-action="Add" class="flex items-center text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item">
                <i class="fas fa-sticky-note mr-3"></i>
                Add
            </a>

            <a asp-controller="AdminTemplate" asp-action="Tables" class="flex items-center text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item">
                <i class="fas fa-sticky-note mr-3"></i>
                Tables
            </a>
            <a asp-controller="AdminTemplate" asp-action="Forms" class="flex items-center text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item">
                <i class="fas fa-sticky-note mr-3"></i>
                Forms
            </a>
          
        </nav>
        

    </aside>

    <div class="relative w-full flex flex-col h-screen overflow-y-hidden">
        <!-- Desktop Header -->
        <header class="w-full items-center bg-white py-2 px-6 hidden sm:flex">
            <div class="w-1/2"></div>
            <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
               
               
            </div>
        </header>

      
        <div class="w-full h-screen overflow-x-hidden border-t flex flex-col">
            <main class="w-full flex-grow p-6">
                <h1 class="text-3xl text-black pb-6">Blank Page</h1>
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                <!-- Add Admin Form -->
                <form asp-controller="AdminTemplate" asp-action="AddAdmin" method="post" class="mb-4 max-w-md">
                    <h2 class="text-xl text-black mb-4">Add Admin</h2>
                    <div class="mb-3">
                        <label for="adminUsername" class="block text-gray-700 text-sm">Username</label>
                        <input type="text" id="adminUsername" name="Username" class="w-full px-2 py-1 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <div class="mb-3">
                        <label for="adminPassword" class="block text-gray-700 text-sm">Password</label>
                        <input type="password" id="adminPassword" name="Password" class="w-full px-2 py-1 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <button type="submit" class="w-full bg-blue-600 text-white py-1 rounded-lg hover:bg-blue-700">Add Admin</button>
                </form>
            
                <!-- Add User Form -->
                <form asp-controller="AdminTemplate" asp-action="AddUser" method="post" class="mb-4 max-w-md">
                    <h2 class="text-xl text-black mb-2">Add User</h2>
                    <div class="mb-3">
                        <label for="userUsername" class="block text-gray-700 text-sm">Username</label>
                        <input type="text" id="userUsername" name="Username" class="w-full px-2 py-1 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <div class="mb-3">
                        <label for="userPassword" class="block text-gray-700 text-sm">Password</label>
                        <input type="password" id="userPassword" name="Password" class="w-full px-2 py-1 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">Add User</button>
                </form>
                <!-- Content goes here! 😁 -->
            </main>
    
            
        </div>
        
    </div>

    <!-- AlpineJS -->
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous"></script>
</body>
</html>
